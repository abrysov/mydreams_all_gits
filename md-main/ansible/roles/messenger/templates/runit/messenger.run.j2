# Settings
APP_ROOT={{ messenger_base_dir }}
APP_USER={{ messenger_deploy_user.name }}
APP_GROUP={{ messenger_deploy_user.name }}

CMD="./bin/messenger foreground"
CHPSTKEY="-u ${APP_USER}:${APP_GROUP}"

# Set environment variables
export HOME=/home/{{ messenger_deploy_user.name }}
export LOG_LEVEL=info
export RELX_REPLACE_OS_VARS=true
export MYDREAMS_DATABASE_HOST={{ messenger_db_host }}
export MYDREAMS_DATABASE_NAME={{ messenger_db_name }}
export MYDREAMS_DATABASE_USER={{ messenger_db_user }}
export MYDREAMS_DATABASE_PASSWORD={{ messenger_db_password }}

cd ${APP_ROOT}/current

# Run
exec 2>&1
echo "Running {{ messenger_runit_service }}..."
exec chpst $CHPSTKEY $CMD

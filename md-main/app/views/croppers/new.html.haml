- if @top_dream
  = form_tag do
    = hidden_field_tag 'id', params[:id]
    .container
      .row
        .col-md-9
          .img-container
            = image_tag @top_dream.photo.to_s
        .col-md-3{style: 'display: none'}
          / <h3 class="page-header">Data:</h3>
          .docs-data
            .input-group.input-group-sm
              %label.input-group-addon{:for => "dataX"} X
              = text_field_tag 'picture_x', '', id: 'dataX', class: 'form-control'
              -#%input#dataX.form-control{:placeholder => "x", :type => "text"}/
              %span.input-group-addon px
            .input-group.input-group-sm
              %label.input-group-addon{:for => "dataY"} Y
              = text_field_tag 'picture_y', '', id: 'dataY', class: 'form-control'
              -#%input#dataY.form-control{:placeholder => "y", :type => "text"}/
              %span.input-group-addon px
            .input-group.input-group-sm
              %label.input-group-addon{:for => "dataWidth"} Width
              = text_field_tag 'picture_w', '', id: 'dataWidth', class: 'form-control'
              -#%input#dataWidth.form-control{:placeholder => "width", :type => "text"}/
              %span.input-group-addon px
            .input-group.input-group-sm
              %label.input-group-addon{:for => "dataHeight"} Height
              = text_field_tag 'picture_h', '', id: 'dataHeight', class: 'form-control'
              %span.input-group-addon px
            .input-group.input-group-sm{style: 'display: none'}
              %label.input-group-addon{:for => "dataRotate"} Rotate
              %input#dataRotate.form-control{:placeholder => "rotate", :type => "text"}/
              %span.input-group-addon deg
            .input-group.input-group-sm{style: 'display: none'}
              %label.input-group-addon{:for => "dataScaleX"} ScaleX
              %input#dataScaleX.form-control{:placeholder => "scaleX", :type => "text"}/
            .input-group.input-group-sm{style: 'display: none'}
              %label.input-group-addon{:for => "dataScaleY"} ScaleY
              %input#dataScaleY.form-control{:placeholder => "scaleY", :type => "text"}/
        #actions.row
          .col-md-9.docs-buttons{style: 'display: none'}
            / <h3 class="page-header">Toolbar:</h3>

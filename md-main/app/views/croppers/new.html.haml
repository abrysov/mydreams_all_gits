                  %span.fa.fa-arrows
              %button.btn.btn-primary{"data-method" => "setDragMode", "data-option" => "crop", :title => "Crop", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.setDragMode(\"crop\")"}
                  %span.fa.fa-crop
            .btn-group
              %button.btn.btn-primary{"data-method" => "zoom", "data-option" => "0.1", :title => "Zoom In", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.zoom(0.1)"}
                  %span.fa.fa-search-plus
              %button.btn.btn-primary{"data-method" => "zoom", "data-option" => "-0.1", :title => "Zoom Out", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.zoom(-0.1)"}
                  %span.fa.fa-search-minus
            .btn-group

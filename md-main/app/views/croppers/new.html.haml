                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.scale(-1, 1)"}
                  %span.fa.fa-arrows-h
              %button.btn.btn-primary{"data-flip" => "vertical", "data-method" => "scale", "data-option" => "1", "data-second-option" => "-1", :title => "Flip Vertical", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.scale(1, -1)"}
                  %span.fa.fa-arrows-v
            .btn-group
              %button.btn.btn-primary{"data-method" => "crop", :title => "Crop", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.crop()"}
                  %span.fa.fa-check
              %button.btn.btn-primary{"data-method" => "clear", :title => "Clear", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.clear()"}
                  %span.fa.fa-remove
            .btn-group
              %button.btn.btn-primary{"data-method" => "disable", :title => "Disable", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.disable()"}
                  %span.fa.fa-lock
              %button.btn.btn-primary{"data-method" => "enable", :title => "Enable", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.enable()"}
                  %span.fa.fa-unlock
            .btn-group
              %button.btn.btn-primary{"data-method" => "reset", :title => "Reset", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.reset()"}
                  %span.fa.fa-refresh
              %label.btn.btn-primary.btn-upload{:for => "inputImage", :title => "Upload image file"}
                %input#inputImage.sr-only{:accept => "image/*", :name => "file", :type => "file"}/
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "Import image with Blob URLs"}
                  %span.fa.fa-upload
              %button.btn.btn-primary{"data-method" => "destroy", :title => "Destroy", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.destroy()"}
                  %span.fa.fa-power-off
            .btn-group.btn-group-crop
              %button.btn.btn-primary{"data-method" => "getCroppedCanvas", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getCroppedCanvas()"}
                  Get Cropped Canvas
              %button.btn.btn-primary{"data-method" => "getCroppedCanvas", "data-option" => "{ \"width\": 160, \"height\": 90 }", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getCroppedCanvas({ width: 160, height: 90 })"}
                  160×90
              %button.btn.btn-primary{"data-method" => "getCroppedCanvas", "data-option" => "{ \"width\": 320, \"height\": 180 }", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getCroppedCanvas({ width: 320, height: 180 })"}
                  320×180
            / Show the cropped image in modal
            #getCroppedCanvasModal.modal.fade.docs-cropped{"aria-hidden" => "true", "aria-labelledby" => "getCroppedCanvasTitle", :role => "dialog", :tabindex => "-1"}
              .modal-dialog
                .modal-content
                  .modal-header
                    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
                    %h4#getCroppedCanvasTitle.modal-title Cropped
                  .modal-body
                  .modal-footer
                    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
                    %a#download.btn.btn-primary{:download => "cropped.png", :href => "javascript:void(0);"} Download
            / /.modal
            %button.btn.btn-primary{"data-method" => "getData", "data-option" => "", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getData()"}
                Get Data
            %button.btn.btn-primary{"data-method" => "setData", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.setData(data)"}
                Set Data
            %button.btn.btn-primary{"data-method" => "getContainerData", "data-option" => "", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getContainerData()"}
                Get Container Data
            %button.btn.btn-primary{"data-method" => "getImageData", "data-option" => "", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getImageData()"}
                Get Image Data
            %button.btn.btn-primary{"data-method" => "getCanvasData", "data-option" => "", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getCanvasData()"}
                Get Canvas Data
            %button.btn.btn-primary{"data-method" => "setCanvasData", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.setCanvasData(data)"}
                Set Canvas Data
            %button.btn.btn-primary{"data-method" => "getCropBoxData", "data-option" => "", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.getCropBoxData()"}
                Get Crop Box Data
            %button.btn.btn-primary{"data-method" => "setCropBoxData", "data-target" => "#putData", :type => "button"}
              %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.setCropBoxData(data)"}
                Set Crop Box Data
            %input#putData.form-control{:placeholder => "Get data to here or set data with this value", :type => "text"}/
          / /.docs-buttons
          .col-md-3.docs-toggles{style: 'display: none'}
            / <h3 class="page-header">Toggles:</h3>
            .btn-group.btn-group-justified{"data-toggle" => "buttons"}

                  %span.fa.fa-arrow-left
              %button.btn.btn-primary{"data-method" => "move", "data-option" => "10", "data-second-option" => "0", :title => "Move Right", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.move(10, 0)"}
                  %span.fa.fa-arrow-right
              %button.btn.btn-primary{"data-method" => "move", "data-option" => "0", "data-second-option" => "-10", :title => "Move Up", :type => "button"}
                %span.docs-tooltip{"data-toggle" => "tooltip", :title => "cropper.move(0, -10)"}
                  %span.fa.fa-arrow-up
              %button.btn.btn-primary{"data-method" => "move", "data-option" => "0", "data-second-option" => "10", :title => "Move Down", :type => "button"}

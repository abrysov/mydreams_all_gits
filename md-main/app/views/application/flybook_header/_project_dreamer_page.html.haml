- if current_dreamer?(@dreamer)
  = flybook_menu_link(account_activities_path) do
    %span.label= t('flybook.activities')
    - if (c = @dreamer.flybook_nb_new_friends_activities) != 0
      %span.new= c

- else
  = flybook_menu_link(account_dreamer_posts_path(@dreamer)) do
    %span.label= t('flybook.activities')

- if current_dreamer?(@dreamer)
  = flybook_menu_link(account_mail_path) do
    %span.label= t('flybook.messages')
    - if (c = @dreamer.flybook_nb_new_received_messages) != 0
      %span.new= c

= flybook_menu_link(account_dreamer_dreams_path(@dreamer)) do
  %span.label= t('flybook.my_dreams')
  - if (c = @dreamer.flybook_nb_suggested_dreams) != 0 && current_dreamer?(@dreamer)
    %span.new= c

= flybook_menu_link(account_dreamer_certificates_path(@dreamer)) do
  %span.label= t('user_menu.marks')
  - if (c = @dreamer.flybook_nb_gifted_certificates) != 0 && current_dreamer?(@dreamer)
    %span.new= c  

= flybook_menu_link(account_dreamer_subscriptions_path(@dreamer)) do
  %span.label= t('flybook.followers')
  - if (c = @dreamer.flybook_nb_new_followers) != 0 && current_dreamer?(@dreamer)
    %span.new= c

- if current_dreamer?(@dreamer)
  = flybook_menu_link(account_dreamer_posts_path(@dreamer)) do
    %span.label= t('flybook.posts')
    - if (c = @dreamer.flybook_nb_suggested_posts) != 0
      %span.new= c
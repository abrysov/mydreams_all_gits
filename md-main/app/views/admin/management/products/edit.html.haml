%h3
  = t('admin.management.actions.edit')
  = @product.name

  - if @product.active?
    = link_to t('admin.management.products.active'), admin_management_product_path(@product),
    remote: true, method: :delete, class: 'btn btn-success', role: 'button'
  - else
    = link_to t('admin.management.products.locked'), admin_management_product_path(@product),
    remote: true, method: :delete, class: 'btn btn-warning', role: 'button'

= render 'admin/management/shared/form', path: admin_management_product_path(@product), method: :put, product: @product

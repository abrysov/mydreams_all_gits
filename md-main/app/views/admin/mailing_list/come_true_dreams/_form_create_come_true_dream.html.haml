= form_for @dream_come_true_email, url: admin_mailing_list_come_true_dream_path(id: @dream_come_true_email.id), html: { method: :patch } do |f|
  %form
    .form-group
      %label= t('admin.mailing_list.come_true_dreams.forms.dream_id')
      %div= @dream_come_true_email.dream.id
    .form-group
      %label= t('admin.mailing_list.come_true_dreams.forms.generate_snapshot')
      %div
        .radio
          %label
            = radio_button_tag :snapshot_type, 'none', true
            = t('admin.mailing_list.come_true_dreams.forms.none_spanshot')
        .radio
          %label
            = radio_button_tag :snapshot_type, 'dream_dreamer', false
            = t('admin.mailing_list.come_true_dreams.forms.dream_dreamer_spanshot')
        .radio
          %label
            = radio_button_tag :snapshot_type, 'dream', false
            = t('admin.mailing_list.come_true_dreams.forms.dream_spanshot')
        .radio
          %label
            = radio_button_tag :snapshot_type, 'dreamer', false
            = t('admin.mailing_list.come_true_dreams.forms.dreamer_spanshot')
    .form-group
      %label= t('admin.mailing_list.come_true_dreams.forms.additional_text')
      = text_area_tag :additional_text, @dream_come_true_email.additional_text, class: 'form-control', placeholder: t('admin.mailing_list.come_true_dreams.forms.additional_text')
    = submit_tag I18n.t('admin.mailing_list.come_true_dreams.buttons.save'), class: 'btn btn-default'

= form_for [:admin, :entity_control, top_dream], html: { class: 'form-horizontal' } do |f|
  = render 'admin/tags/shared/form_errors', object: top_dream
  .form-group
    %label.col-sm-2.control-label{ for: 'title' } Title
    .col-sm-5
      = f.text_field :title, class: 'form-control'
  .form-group
    %label.col-sm-2.control-label{ for: 'description' } Description
    .col-sm-5
      = f.text_field :description, class: 'form-control'
  .form-group
    %label.col-sm-2.control-label{ for: 'photo' } Photo
    .col-sm-5
      .checkbox
        = f.file_field :photo
  .form-group
    .col-sm-5.col-md-offset-2
      = f.submit (top_dream.new_record? ? 'Create' : 'Save'), class: 'btn btn-default'

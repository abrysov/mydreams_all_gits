- @banners = @ad_page.banners.any? ? @ad_page.banners : Banner.all
= form_for [:admin, :advertisement, @ad_page], html: { class: "form-horizontal" } do |f|
  .form-group
    %label.col-sm-2.control-label{ for: 'route' } Route
    .col-sm-5
      = f.text_field :route, class: 'form-control'
  .form-group
    %label.col-sm-2.control-label{ for: 'banner' } Banner
    .col-sm-5
      = f.collection_select :banner_ids, Banner.all, :id, :name, {}, { multiple: true, selected: @ad_page.banners, class: 'form-control' }
  .form-group
    .col-sm-5.col-md-offset-2
      = f.submit (@ad_page.new_record? ? 'Create' : 'Save'), class: 'btn btn-default'

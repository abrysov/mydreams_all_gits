.group
  .card
    .front
      %a.label.vip{ href: "#" } vip
      %a.picture{ href: "#" }
        .picture-wrap
          %img{ alt: "drean", src: "http://unsplash.it/200/200?random=" + Random.rand(200).to_s }
        .menu
          .opt-list
            %li.icon-text
              .icon.circle.add
                %span.text Добавить себе
            %li.icon-text
              .icon.circle.share-friends
                %span.text Предложить другу
            %li.icon-text
              .icon.circle.shere
                %span.text Поделиться
            %li.icon-text
              .icon.circle.gift
                %span.text Подарить марку
            %li.icon-text
              .icon.circle.in-progress
                %span.text Исполнить мечту

        .icon.circle.options
      %a.description{ href: "#" }
        %h3 Мечтаю свою большую мечту
        %h5 Мечтаю об этом, с таким длинным описанием...
      .reactions
        .icon-text.like
          .icon.reaction
          %span.text
            = Random.rand(200)
        .icon-text.in-progress
          .icon.reaction
          %span.text
            = Random.rand(200)
        .icon-text.comments
          .icon.reaction
          %span.text
            = Random.rand(200)
      .back
  .user-card
    .avatar.size-s
      %img{ alt: "avatar", src: "https://randomuser.me/api/portraits/men/" + Random.rand(20).to_s + ".jpg" }
    .description
      %a{ href: "#" } User Name
      .icon-text
        .icon.size-8.time
        .text 12 Ноября


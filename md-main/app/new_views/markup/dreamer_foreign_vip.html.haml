  .col-js
    .top
      %ul.vertical-menu
        %li
          %a.active.user-card
            .avatar.size-s
              %img{ alt: "avatar", src: "https://randomuser.me/api/portraits/men/17.jpg" }
            .description
              %strong Etta Pierce
              .icon-text.info
                .icon.size-8.female
                %span 23, Россия, Москва
      %ul.vertical-menu
        %li
          %a{ href: "/markup/balance" }

.col-center.content-body
  .header
    .title
      %h2 Сбывшиеся Мечты
  %div
    .card-list-filters.filter
      %label
        .sort-btn.down По статусу
      %label
        .sort-btn.up По дате
    .card-list
      .card.add-dream
        .front
          .plus
          .title Добавить сбывшуюся Мечту
      - (0..10).each do |dream|
        = render partial: 'card/fulfilled_dream'
    .preloader
.col-right
  .col-js
    .top
      %ul.vertical-menu
        %li
          %a.active.user-card
            .avatar.size-s
              %img{ alt: "avatar", src: "https://randomuser.me/api/portraits/men/17.jpg" }
            .description
              %strong Etta Pierce
              .icon-text.info
                .icon.size-8.female
                %span 23, Россия, Москва
      .wrapper
        .right-title
          Фотоальбом
          .number 23
        %br
        .widget-photos
          - (1..6).each do |i|
            %a.img{ href: "#", style: "background-image: url(http://unsplash.it/100/100/?random=" + Random.rand(50).to_s + ")" }
        %ul.widget-stats
          %li{ title: "Мечты" }
            .icon
            .number 63
          %li.active{ title: "Сбывшиеся" }
            .icon
            .number 12
          %li{ title: "Запуски" }
            .icon
            .number 112
          %li{ title: "Друзья" }
            .icon
            .number 326
          %li{ title: "Подписчики" }
            .icon
            .number 345

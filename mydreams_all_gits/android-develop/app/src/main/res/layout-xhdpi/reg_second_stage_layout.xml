<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_reg_second_stage">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/ic_btn_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_top_registration"
        android:id="@+id/textView7"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_back"
        android:layout_marginTop="82dp"
        android:layout_above="@+id/user_last_name"
        android:id="@+id/custom_view_name"
        android:layout_alignRight="@+id/user_name"
        android:layout_alignEnd="@+id/user_name"
        android:layout_alignLeft="@+id/img_divider_name"
        android:layout_alignStart="@+id/img_divider_name" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/custom_view_name"
        android:background="@color/grey_extra_light"
        android:id="@+id/img_divider_name"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textFilter"
        android:ems="10"
        android:layout_marginRight="5dp"
        android:gravity="right|center"
        android:id="@+id/user_name"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/btn_back"
        android:background="@color/transparent"
        android:layout_alignRight="@+id/img_divider_name"
        android:layout_alignEnd="@+id/img_divider_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/custom_view_last_name"
        android:layout_below="@+id/user_name"
        android:layout_alignBottom="@+id/user_last_name"
        android:layout_alignLeft="@+id/img_divider_name"
        android:layout_alignStart="@+id/img_divider_name"
        android:layout_alignRight="@+id/img_divider_name"
        android:layout_alignEnd="@+id/img_divider_name" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/custom_view_last_name"
        android:background="@color/grey_extra_light"
        android:id="@+id/img_divider_last_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:ems="10"
        android:inputType="textFilter"
        android:layout_marginRight="5dp"
        android:gravity="right|center"
        android:id="@+id/user_last_name"
        android:layout_below="@+id/user_name"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name"
        android:layout_alignRight="@+id/img_divider_name"
        android:layout_alignEnd="@+id/img_divider_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView15"
        android:layout_above="@+id/img_divider_name"
        android:layout_alignLeft="@+id/img_divider_name"
        android:layout_alignStart="@+id/img_divider_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_second_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView16"
        android:layout_alignBottom="@+id/img_divider_last_name"
        android:layout_alignLeft="@+id/img_divider_name"
        android:layout_alignStart="@+id/img_divider_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_data_orbith_and_sex"
        android:layout_marginTop="30dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/img_divider_last_name"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/line_horizontal"
        android:layout_alignTop="@+id/date_view"
        android:layout_alignLeft="@+id/date_view"
        android:layout_alignStart="@+id/date_view"
        android:layout_alignRight="@+id/date_view"
        android:layout_alignEnd="@+id/date_view" />

    <View
        android:id="@+id/date_picker_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="17dp"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_alignBottom="@+id/date_view" />

    <include
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/date_view"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="17dp"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/line_horizontal"
        android:layout_alignBottom="@+id/date_view"
        android:layout_alignLeft="@+id/date_view"
        android:layout_alignStart="@+id/date_view"
        android:layout_alignRight="@+id/date_view"
        android:layout_alignEnd="@+id/date_view"
        android:id="@+id/imageView17" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        layout="@layout/selection_sex"
        android:layout_below="@+id/imageView17"
        android:layout_alignLeft="@+id/imageView17"
        android:layout_alignStart="@+id/imageView17"
        android:layout_alignRight="@+id/imageView17"
        android:layout_alignEnd="@+id/imageView17"
        android:id="@+id/include2" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:text="@string/title_onward"
        android:background="@drawable/button_selector"
        android:id="@+id/btn_onward"
        android:layout_above="@+id/steps_registration"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/steps_registration"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/step_one"
            android:layout_gravity="center"
            android:background="@mipmap/ic_circle_one"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_arrow"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/step_two"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_circle_two_select"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_arrow"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/step_three"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_circle_three"/>
    </LinearLayout>

</RelativeLayout>
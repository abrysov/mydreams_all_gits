<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_btn_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_top_registration"
            android:id="@+id/textView7"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:layout_above="@+id/user_password"
        android:id="@+id/custom_view_email" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/custom_view_email"
        android:background="@color/grey_extra_light"
        android:id="@+id/img_divider_mail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginRight="5dp"
        android:gravity="right|center"
        android:id="@+id/user_mail"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/btn_back"
        android:background="@color/transparent"
        android:layout_alignRight="@+id/img_divider_mail"
        android:layout_alignEnd="@+id/img_divider_mail"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/custom_view_password"
        android:layout_below="@+id/user_mail"
        android:layout_above="@+id/check_user_password" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/custom_view_password"
        android:background="@color/grey_extra_light"
        android:id="@+id/img_divider_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginRight="5dp"
        android:gravity="right|center"
        android:id="@+id/user_password"
        android:layout_below="@+id/user_mail"
        android:layout_alignLeft="@+id/check_user_password"
        android:layout_alignStart="@+id/check_user_password"
        android:layout_alignRight="@+id/img_divider_mail"
        android:layout_alignEnd="@+id/img_divider_mail" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_password"
        android:layout_alignBottom="@+id/check_user_password"
        android:id="@+id/custom_view_check_password" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/img_divider_confirm_password"
        android:layout_below="@+id/custom_view_check_password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey_extra_light"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginRight="5dp"
        android:gravity="right|center"
        android:layout_marginLeft="4dp"
        android:background="@color/transparent"
        android:id="@+id/check_user_password"
        android:layout_below="@+id/user_password"
        android:layout_toRightOf="@+id/textView13"
        android:layout_alignRight="@+id/img_divider_password"
        android:layout_alignEnd="@+id/img_divider_password" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/ic_mail"
        android:layout_alignBottom="@+id/custom_view_email"
        android:layout_alignLeft="@+id/btn_back"
        android:layout_alignStart="@+id/btn_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_user_email"
        android:id="@+id/textView"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/custom_view_email"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/ic_lock"
        android:layout_above="@+id/custom_view_check_password"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_user_password"
        android:id="@+id/textView11"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/custom_view_check_password"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/ic_lock"
        android:layout_alignBottom="@+id/custom_view_check_password"
        android:layout_alignLeft="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_password_again"
        android:id="@+id/textView13"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/custom_view_check_password"
        android:layout_toRightOf="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_or"
        android:id="@+id/textView14"
        android:layout_below="@+id/custom_view_check_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView14"
        android:layout_above="@+id/btn_registration"
        android:layout_alignParentRight="true"
        android:id="@+id/social_auth"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/vkontakte"
            android:layout_gravity="center"
            android:background="@mipmap/ic_vk"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/facebook"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_facebook"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/instagram"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_instagram"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/twitter"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_twiter"/>

    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:text="@string/title_onward"
        android:background="@drawable/button_selector"
        android:id="@+id/btn_onward"
        android:layout_above="@+id/steps_registration"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/steps_registration"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/step_one"
            android:layout_gravity="center"
            android:background="@mipmap/ic_circle_one_select"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_arrow"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/step_two"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_circle_two"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_arrow"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/step_three"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_circle_three"/>
    </LinearLayout>

</RelativeLayout>
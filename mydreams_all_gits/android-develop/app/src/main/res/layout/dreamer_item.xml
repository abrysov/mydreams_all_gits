<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dreamer_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@color/text_color_grey"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout7"
                android:layout_alignEnd="@+id/relativeLayout5"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout3"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/dreamer_status">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isabella Wagner"
                        android:textSize="19sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_color_grey"
                        android:id="@+id/dreamer_full_name"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/dreamer_status"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_vip_status" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/vk_black"
                        android:textSize="11sp"
                        android:text="VIP"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout5"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/linearLayout6"
                android:layout_below="@+id/linearLayout7">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_gender_female"
                    android:id="@+id/img_dreamer_gender"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/age_and_location_dreamer"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/grey"
                    android:text="23, Москва, Российская Федерация"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/img_user_gender"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:id="@+id/linearLayout6"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_add_to_friends"
                    android:background="@mipmap/ic_add_to_friends"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:background="@color/fulfilled_dreams_bottom_divider_color"/>

</LinearLayout>
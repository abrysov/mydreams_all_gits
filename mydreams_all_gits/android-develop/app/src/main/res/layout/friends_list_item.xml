<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/ic_launcher"
            app:border_color="#FF000000"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Android Androidovich"
            android:textSize="16sp"
            android:id="@+id/friendName"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_photo"
            android:layout_toEndOf="@+id/user_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Russia, Trololo"
            android:layout_marginLeft="4dp"
            android:id="@+id/friendLocation"
            android:layout_alignBottom="@+id/user_photo"
            android:layout_toRightOf="@+id/user_photo"
            android:layout_toEndOf="@+id/user_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h."
            android:layout_marginRight="16dp"
            android:id="@+id/time_publish"
            android:layout_alignBottom="@+id/friendName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gold"
            android:id="@+id/friendStatus"
            android:layout_marginRight="16dp"
            android:layout_alignTop="@+id/friendLocation"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
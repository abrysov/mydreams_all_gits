        <item name="windowNoTitle">true</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
        <item name="flybook_user_info_background">@android:color/white</item>
        <item name="flybook_user_info_text_color">@color/textColorPrimary</item>
        <item name="flybook_user_info_ic_user">@drawable/ic_user_blue</item>
        <item name="flybook_user_info_ic_location">@drawable/ic_location_blue</item>
        <item name="flybook_user_info_ic_quote">@drawable/ic_quote_blue</item>

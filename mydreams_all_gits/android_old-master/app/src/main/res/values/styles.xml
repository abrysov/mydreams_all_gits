    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="ToolbarTheme">@style/BlueToolbarTheme</item>
        <item name="photo_placeholder">@drawable/photo_placeholder_blue</item>
        <item name="bg_button">@drawable/bg_button_blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="LightBlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/light_blue_dark</item>
        <item name="ToolbarTheme">@style/LightBlueToolbarTheme</item>
        <item name="photo_placeholder">@drawable/photo_placeholder_lightblue</item>
        <item name="ic_quote">@drawable/ic_quote_lightblue</item>
        <item name="ic_user">@drawable/ic_user_lightblue</item>
        <item name="ic_location">@drawable/ic_location_lightblue</item>
        <item name="ic_launch">@drawable/ic_launch_lightblue</item>
        <item name="ic_like">@drawable/ic_like_lightblue</item>
        <item name="ic_comments">@drawable/ic_comments_lightblue</item>

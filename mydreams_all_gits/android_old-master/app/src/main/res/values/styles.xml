    <style name="GuestFlybookTheme" parent="AppTheme">
        <item name="flybook_user_info_background">@color/colorPrimary</item>
        <item name="flybook_user_info_text_color">@android:color/white</item>
        <item name="flybook_user_info_ic_user">@drawable/ic_user_white</item>
        <item name="flybook_user_info_ic_location">@drawable/ic_location_white</item>
        <item name="flybook_user_info_ic_quote">@drawable/ic_quote_white</item>

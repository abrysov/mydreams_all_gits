    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">

    </style>

    <style name="RedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="ToolbarTheme">@style/RedToolbarTheme</item>
        <item name="photo_placeholder">@drawable/photo_placeholder_red</item>

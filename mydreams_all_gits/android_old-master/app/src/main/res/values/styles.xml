        <item name="photo_placeholder">@drawable/photo_placeholder_blue</item>
        <item name="ic_like">@drawable/ic_like_blue</item>
        <item name="ic_comments">@drawable/ic_comments_blue</item>
        <item name="ic_user">@drawable/ic_user_blue</item>
        <item name="ic_location">@drawable/ic_location_blue</item>
        <item name="ic_launch">@drawable/ic_launch_blue</item>
        <item name="bg_button">@drawable/bg_button_blue</item>
        <item name="style_edit_text_divider">@drawable/white_edit_text_color_divider</item>
        <item name="style_edit_text_label">@drawable/white_edit_text_color_label</item>

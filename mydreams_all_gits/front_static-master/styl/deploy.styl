//nib - http//nibstyl.us/docs http//tj.github.io/nib/
@import 'nib'

//nib resets - https//github.com/tj/nib/blob/master/lib/nib/reset.styl
global-reset()
reset-html5()

//todo use postcss-font-magician
@import 'fonts'

html
  font-size 52px

  @media (max-width: 700px)
    font-size 35px

  @media (min-width: 701px) and (max-width: 1000px)
    font-size 45px


body
  background linear-gradient(135deg, #009eff 0%, #e237fa 100%)
  background-size 100% 100%
  background-attachment fixed
  color #ffffff
  height 100%


main#deploy
  height 260px
  text-align center
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)

  h1
    font-size 1rem
    font-family "Roboto"
    margin-bottom 15px

  p
    font-size 0.4rem
    font-family "RobotoThin"
    margin-bottom 10px

  img
    margin-top 30px
    width 2rem

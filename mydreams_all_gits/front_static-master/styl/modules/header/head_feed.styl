.head_feed

  @import 'modules/tooltip'


  //todo: check that... twise..
  .tooltip
    left remify(-30px)
    bottom -100%

  &.is-hidden
    display none
  

  &.is-show
    display table


  display table

  position relative
  border-bottom 1px solid white

  box-shadow inset 0 -5px 30px rgba(0,0,0,0 0.1)

  //display none
  //background-color rgba(0,0,0,0.4)

  height head_feed_height

  &__item
    cursor pointer
    position relative
    background-color red
    display table-cell
    width remify(78px)
    min-width remify(78px)
    height remify(78px)
    border-left 1px solid white
    font-family RobotoLight

    &.add-feed
      background linear-gradient(135deg, #009cfe 0%, #3770ff 26%, #8637ff 51%, #b500ff 75%, #d100ff 100%)
      cursor pointer

      .add-feed-icon

        &:hover

          &:before
            opacity 0

          &:after
            opacity 1

        &:before
          content ''
          display block
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          background url(//d20pou9wppyzb1.cloudfront.net/assets/svg/feed_add_item-088b1f2408533c5ab6dc51743c0dd3643022051d1ea2800296c7c90d2fffd4c0.svg) center center no-repeat
          background-size 50px
          opacity 1
          transition opacity base-speed ease-out

        &:after
          content ''
          display block
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          background url(//d20pou9wppyzb1.cloudfront.net/assets/svg/feed_add_item_hover-cd4780ff62400689cebd80ebe9404a2af459d1eef0eed0e3f1af9bb5bfb73cb3.svg) center center no-repeat
          background-size 50px
          opacity 0
          transition opacity base-speed ease-out

      &:before
        content ""
        display block
        position absolute
        width 100%
        height 100%
        left 0
        top 0
        right 0
        bottom 0

    .feed_image_wrapper
      position: absolute;
      width: 100%;
      height: 100%;
      overflow: hidden;
      text-align: center;
      background-color: #f5f5f5;


    &:hover .tooltip
      visibility visible

    &:hover img
      transform scale(1.1,1.1)

    img
      //position absolute
      width 100%
      transition transform base-speed linear

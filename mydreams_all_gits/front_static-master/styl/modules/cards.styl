.cards
  make-row()
  &__item
    make-column(1,4)
    margin remify(25px) 0
    transition transform base-speed linear


    &:hover
      transform scale(1.03)

    &-image
      height remify(190px)

    .cards__header
      background-color card-green
      color white
      text-align center
      border-top-left-radius card-border-radius
      border-top-right-radius card-border-radius
      font-size 0.5rem
      padding remify(7px) 0 remify(4px)
      font-family "RobotoLight"

    .cards__wrapper
      position relative
      perspective 800
      height remify(305px)

    .cards__inner
      position absolute
      fit('absolute')
      background transparent
      transition transform base-speed ease-out
      transform-style preserve-3d

    .cards__front, .cards__back
      position absolute
      set-size(100%)
      border-radius card-border-radius
      box-shadow 0 1px 6px rgba(0,0,0,0.2)
      background-color white
      backface-visibility hidden
      transition transform base-speed linear

    .cards__front
      transform rotateY(0deg)
      box-shadow inset 0 0 10px transparent // CSS хак для scale трансформации. Скрывает белые полоски справа

      > a
        display block
        transition all 0.3s ease-out 0s
        text-decoration none
        color initial
        font-family "RobotoLight"

      img
        width 100%

    &-info
      padding remify(9px) remify(17px) 0
      text-align center

    &-title
      display block
      word-wrap break-word
      font-size remify(14px)
      width 100%
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

    &-description
      font-size 0.47rem
      line-height 1.3em
      font-family "RobotoLight"
      padding-top remify(4px)

    &-buttons-wrap
      @extend .cards__item-info

    &-buttons
      width 100%
      padding-top remify(5px)
      font-family "RobotoLight"
      font-size remify(11px)
      display table

      .cards__item-likes
        background asset_url("icons/card_icon_likes_filled.svg") 0 center no-repeat
        background-size 12px auto
        &.empty
          background asset_url("icons/card_icon_likes_empty.svg") 0 center no-repeat
          background-size 12px auto
      .cards__item-rocket
        background asset_url("icons/card_icon_rocket_filled.svg") 8px center no-repeat
        background-size 19px auto
        padding-left remify(20px)
      .cards__item-comments
        background asset_url("icons/card_icon_comments_filled.svg") 21px center no-repeat
        background-size 14px auto
        text-align right
        &.empty
          background asset_url("icons/card_icon_comments_empty.svg") 21px center no-repeat
          background-size 14px auto

    &-button
      width 30%
      display table-cell
      vertical-align middle
      cursor pointer
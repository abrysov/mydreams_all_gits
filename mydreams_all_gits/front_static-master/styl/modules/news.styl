.news
  make-row()

  &__item
    make-column(1,3)
    margin-bottom remify(50px)
    transition transform base-speed linear

    &:hover
      transform scale(1.03)

    .news__wrapper
      position relative
      perspective 800
      height remify(282px)

    .news__inner
      position absolute
      fit('absolute')
      background transparent
      transition transform base-speed ease-out
      transform-style preserve-3d

    .news__front, .news__back
      position absolute
      set-size(100%)
      border-radius card-border-radius
      box-shadow 0 1px 6px rgba(0,0,0,0.2)
      background-color white
      backface-visibility hidden

    .news__front
      transform rotateY(0deg)
      box-shadow inset 0 0 10px transparent // CSS хак для scale трансформации. Скрывает белые полоски справа

      > a
        display block
        transition all 0.3s ease-out 0s
        text-decoration none
        color initial
        font-family "RobotoLight"

      img
        border-top-left-radius card-border-radius
        border-top-right-radius card-border-radius
        width 100%

    &-info
      padding remify(9px) remify(17px) 0

    &-title
      display block
      font-family Roboto
      word-wrap break-word
      font-size remify(14px)
      width 100%
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

    &-date
      padding remify(5px) 0 remify(4px) remify(18px)
      font-size remify(9px)
      font-weight 300
      color #a6a6a6
      background-image asset_url("icons/post_date.svg")
      background-position left center
      background-repeat no-repeat
      background-size remify(10px) remify(10px)

    &-description
      font-size 0.47rem
      line-height 1.3em
      font-family "RobotoLight"

    &-buttons-wrap
      @extend .news__item-info

    &-buttons
      width 100%
      font-family "RobotoLight"
      font-size remify(11px)


      .news__item-likes
        background asset_url("icons/card_icon_likes_filled.svg") 0 1px no-repeat
        background-size 12px auto
        set-size(remify(17px))
        padding-left remify(20px)
        margin-right remify(20px)
        float left

        &.empty
          background asset_url("icons/card_icon_likes_empty.svg") 0 2px no-repeat
          background-size 12px auto

      .news__item-comments
        background asset_url("icons/card_icon_comments_filled.svg") 0 2px no-repeat
        background-size 14px auto
        set-size(remify(17px))
        padding-left remify(20px)
        float left

        &.empty
          background asset_url("icons/card_icon_comments_empty.svg") 0 1px no-repeat
          background-size 14px auto

      .news__item-share
        set-size(remify(20px))
        background asset_url("icons/post_share.svg") right 1px no-repeat
        background-size 19px auto

    &-button
      display table-cell
      vertical-align middle
      cursor pointer

